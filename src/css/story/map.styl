.map
	position relative
	svg
		.region
			fill none
			stroke $off-white
			stroke-width 0.5px
			stroke-opacity 0.25
			cursor pointer
	
	.map__intro
		max-width 40rem
		margin 0 auto
		padding 0 1rem
		mark
			background-color $gray-light
			border-bottom 2px solid $gray-dark
			padding 0 0.5em
	.map__ui
		max-width 20rem
		margin 0 auto
		text-align center
		padding 0 1rem

		.ui__label
			text-align center
			margin 0
		.slider
			width 100%
			display inline-block
	
	.map__key
		max-width 69rem
		margin 1rem auto
		padding 0 1rem
		ul
			display flex
			flex-wrap wrap
			justify-content flex-start
		li
			padding 0 0.5rem
			margin-right 1rem
			margin-bottom 0.5rem
			set-type-size(x-small, true)
			border 2px solid currentColor
			border-radius 16px
			cursor pointer
			font-weight 500

	.map__graphic
		// display flex
		position relative
	
	.graphic__chart
		width 100%
	.graphic__info
		width 10rem
		position absolute
		top 50%
		transform translateY(-50%)
		left 0
		padding 1rem
		background-color rgba($off-white, 0.5)

	.info__words
		margin-top 0.5rem
		li
			text-align center
			font-weight 600
			color $gray-dark
