
footer
	background-color $off-white
	padding 1rem
	+mq('bp-2')
		padding 2rem

	.footer-social
		padding-bottom 0.5rem
		margin 0 auto
		margin-bottom 1rem
		max-width 100%
		text-align left
		font-size 0.8rem
		display block
		border-bottom 1px solid $gray-light
		&__preach
			display block
			padding 0
			margin-right 0.5em
			text-transform uppercase
			letter-spacing 0.05em
			font-weight 600
			set-type-size(small)
			+mq('bp-2')
				display inline-block

		&__icons
			display inline-block
			vertical-align middle
			margin-top 1em
			+mq('bp-2')
				margin-top 0
			clearfix()

		&__icon
			float left
			margin 0
			padding 0
			line-height 1
			margin-right 0.5em
			display inline-block

	.outro
		margin-top 2rem
		max-width 50rem
		p
			set-type-size(small)
		.outro__hed
			font-size 0.7em
			font-weight 600
			text-transform uppercase
			margin-top 1rem
			margin-bottom 0.5rem
			letter-spacing 0.05em
		strong
			font-weight 600