<section id='map' class='map'>
	<p class='map__intro small'>Text here that explains that Get Out was most
		<mark>scary</mark> and this other movie was voted something else. Text here that explains that Shape of Water was most
		<mark>beautiful</mark> and this other movie was voted something else.</p>
	<div class='map__key'>
		<ul></ul>
	</div>
	<div class='map__ui'>
		<ul class='past'>
			<li class='is-selected'>
				<p class='label'>Past 12 months</p>
				<span class='rect'></span>
			</li>
		</ul>
		<ul class='timeline'>

		</ul>
		<div class='ui__control'>
			<span class='play is-selected'>@@include('play.svg')</span>
			<span class='pause'>@@include('pause.svg')</span>
		</div>
	</div>
	<div class='map__graphic'>
		<div class='graphic__chart'>
			<svg>
				<g></g>
			</svg>
		</div>
		<div class='graphic__info'>
			<div class='info__toggle'>
				<p class='x-small'>Hide</p>
			</div>
			<div class='info__trailer'>
				<div id='youtube-player'></div>
			</div>
			<div class='info__words'>
				<p class='small'>Most Used Words in Captions</p>
				<ul></ul>
			</div>
		</div>
	</div>

</section>

